@model List<ClassPresentationsession>
@{
    ViewData["Title"] = "ShowPresentations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery-3.2.1.min.js"></script>
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading" align="center">
            <h3 class="panel-title">Katıldığınız Sunumlar</h3>
        </div>
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-6" align="right">
                            @item.Presentation.PresentationName
                        </div>
                        <div class="toggle" id="dropdown-detail-@item.SessionId.ToString()" data-toggle="detail-@item.SessionId.ToString()">
                            <i class="fa fa-chevron-down pull-right"></i>
                        </div>
                        <div class="col-md-1" align="center">
                            <button class="btn-danger" onclick="RemovePresentation(@item.PresentationId,@item.SessionId)">
                                İptal
                            </button>
                        </div>
                    </div>
                    <div id="detail-@item.SessionId.ToString()">
                        <hr></hr>
                        <div class="container">
                            <div class="fluid-row">
                                <div class="col-xs-1">
                                    Sınıf
                                </div>
                                <div class="col-xs-5">
                                    @item.Class.ClassName
                                </div>
                                <div class="col-xs-1">
                                    Sınıf Kapasitesi
                                </div>
                                <div class="col-xs-5">
                                    @item.Class.ClassCapacity
                                </div>
                                <div class="col-xs-1">
                                    Kayıtlı Öğrenci Sayısı
                                </div>
                                <div class="col-xs-5">
                                    @item.CurrentCapacity
                                </div>
                                <div class="col-xs-1">
                                    Saat
                                </div>
                                <div class="col-xs-5">
                                    @item.Sessions.StartTime 
                                    -
                                    @item.Sessions.EndTime
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('[id^=detail-]').hide();
        $('.toggle').click(function () {
            $input = $(this);
            $target = $('#' + $input.attr('data-toggle'));
            $target.slideToggle();
        });
    });

    function RemovePresentation(_presentationId, _sessionId) {
        var reply = confirm("Kaydı iptal etmek istediğinizden emin misiniz?");

        if (reply) {
            $.ajax({
                type: "POST",
                url: "/Student/RemovePresentation?studentSchoolId=" +@User.Identity.Name
                    +"&presentationId=" + _presentationId
                    + "&sessionId=" + _sessionId,
                data: null,
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    alert(response);
                    window.location.href = "/Presentations/Index"
                },
            });
        }
        else {
            alert("Kayıt silme isteğiniz iptal edildi.");
        }
    }
</script>

